@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>

@{ ViewBag.Title = "SatisDetay";
                Layout = "~/Views/Shared/AdminLayout.cshtml"; }

<h2>SatisDetay</h2>
<br />

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Ürün</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam Tutar</th>
        <th>Tarih</th>

    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.Satisİd</td>
    <td>@x.Urun.UrunAd</td>
    <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
    <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</td>
    <td>@x.Fiyat</td>
    <td>@x.Adet</td>
    <td>@x.ToplamTutar</td>
    <td>@x.Tarih.ToShortDateString()</td>
</tr>}
</table>
<button class="btn-default" style="background-color:dodgerblue">Yazdır</button>

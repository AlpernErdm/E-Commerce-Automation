@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model  List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered mx-4" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>

            <td>  @k.Satisİd</td>
            <td>  @k.Urun.UrunAd </td>
            <td>  @k.Cariler.CariAd @k.Cariler.CariSoyad </td>
            <td>  @k.Personel.PersonelAd @k.Personel.PersonelSoyad </td>
            <td>  @k.Adet </td>
            <td>  @k.Fiyat </td>
            <td>  @k.ToplamTutar </td>
            <td>  @k.Tarih </td>
       
            <td>
                <a href="/Personel/PersonelGetir/@k.Personelid" class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <a href="/Departman/DepartmanPersonelSatis/@k.Personelid" class="btn btn-success" style="background-color:lightcoral ;color:white"> Detaylar</a>
            </td>

        </tr>

    }

</table>
<a href="/Satis/YeniSatis" class="btn btn-info">Yeni Satış Yap</a>



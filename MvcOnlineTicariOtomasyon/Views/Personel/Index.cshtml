@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<table class="table table-bordered mx-4" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman *burda hata alıyorum*</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var k in Model)
    {
<tr>

    <td>  @k.PersonelId</td>
    <td>  @k.PersonelAd </td>
    <td>  @k.PersonelSoyad </td>
    <td>  @k.PersonelGorsel </td>
    <td>  @k.PersonelAd </td>
    @*<td>@k.Departman.DepartmanAd</td>*@



    <td>
        <a href="/Personel/PersonelGetir/@k.PersonelId" class="btn btn-warning">Güncelle</a>
    </td>
    <td>
        <a href="/Departman/DepartmanPersonelSatis/@k.PersonelId" class="btn btn-success" style="background-color:lightcoral ;color:white"> Detaylar</a>
    </td>

</tr>

    }

</table>
<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>



@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model  List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 style="margin-top:20px">SATIŞLAR</h2>

<table id="tbl1" class="table table-hover" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Ürün</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>

            <td>  @k.Satisİd</td>
            <td>  @k.Urun.UrunAd </td>
            <td>  @k.Cariler.CariAd @k.Cariler.CariSoyad </td>
            <td>  @k.Personel.PersonelAd @k.Personel.PersonelSoyad </td>
            <td>  @k.Adet </td>
            <td>  @k.Fiyat </td>
            <td>  @k.ToplamTutar </td>
            <td>  @k.Tarih </td>

            <td>
                <a href="/Satis/SatisGetir/@k.Satisİd" class="btn btn-warning"><i class="fa fa-undo"></i> Güncelle</a>
                <a href="/Satis/SatisDetay/@k.Satisİd" class="btn btn-info"><i class="fa fa-info-circle"></i> Detay</a>
            </td>


        </tr>

    }

</table>
